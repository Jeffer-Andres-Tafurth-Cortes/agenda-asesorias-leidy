generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Booking {
  id        String   @id @default(uuid())
  reference String   @unique

  service   String
  date      DateTime
  time      String

  name      String
  email     String
  phone     String

  amount    Int
  status    String   // pending | paid | cancelled

  createdAt DateTime @default(now())
}
